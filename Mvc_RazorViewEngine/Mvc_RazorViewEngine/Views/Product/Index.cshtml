@model Mvc_RazorViewEngine.Models.ProductCategoryVM

<h3>Kategori Adı:   @Model.Categories.CategoryName  </h3>
<br />
<h3>Kategori Açıklaması:    @Model.Categories.Description</h3>


<table border="1" style="border: 2px solid green;  background-color:antiquewhite; width:500px; height:250px;">
    <thead style="border:1px solid black;">
        <br />
    <th>Ürün Adı </th>
    <th>Ürün Açıklaması</th>
    <th>Fiyatı </th>
    </thead>
    <tbody style="border: 1px solid black">
        @{
            for (int i = 0; i < Model.Products.Count; i++)
            {
                var product = Model.Products[i];
                <tr style="border: 1px solid black">
                    <td>@product.Name  </td>
                    <td>@product.ProductDescription  </td>
                    <td>@product.Price</td>
                </tr>
            }
        }
    </tbody>
</table>


