@model ViewToController_Intro.Models.CustomerVM

<div class="container">
  <form id="customerform" asp-controller="Customer" asp-action="CustomerDetail" asp-route-id="@Model.Id" method="post"> 
        <div>
            <button class="btn btn-outline-info">Yeni</button>
            <button class="btn btn-outline-success">Kaydet</button>
            <button class="btn btn-outline-danger">Sil</button>
            <button class="btn btn-outline-primary">Listele</button>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label asp-for="@Model.Name">Müşteri Adı </label>
                <input asp-for="@Model.Name" class="form-control" />
            </div>
            <div class="col-md-2">
                <label asp-for="@Model.Phone">Müşteri Telefon </label>
                <input asp-for="@Model.Phone" class="form-control" />
            </div>
            <div class="col-md-2">
                <label asp-for="@Model.Address">Müşteri Adres </label>
                <textarea asp-for="@Model.Address" class="form-control"></textarea>
            </div>
        </div>
  </form>
</div>

