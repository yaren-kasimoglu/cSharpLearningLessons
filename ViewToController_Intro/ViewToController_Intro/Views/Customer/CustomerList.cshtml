@model List<ViewToController_Intro.Models.CustomerVM>

<table class="table table-dark">
    <thead>
        <tr>
            <th>Id</th>
            <th>Müşteri Adı</th>
            <th>Telefon</th>
            <th>Adres</th>
            <th></th>
        </tr>
    </thead>
    <toby>
        @{
            if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Phone</td>
                        <td>@item.Address</td>
                        <td>
                        <a class="btn btn-outline-info" asp-controller="Customer" asp-action="CustomerDetail" asp-route-id="@item.Id"> Detaya Git </a>
                        </td>

                    </tr>
                }
            }
            else
            {
                <tr>
                    <td style="text-align:center" colspan="6">Sayfada görüntülenecek kayıt bulunamadı</td>
                </tr>
            }
        }
    </toby>
</table>