@model Category

@{
    ViewData["Title"] = "Create";
}

<div class="offset-3 col-md-6">
    <form asp-action="Create" asp-controller="Category" asp-area="Administrator" method="post">
        @if (TempData["MessageError"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["MessageError"]
            </div>
        }
@*        else if (TempData["MessageSuccess"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["MessageSuccess"]
            </div>
        }*@
        <div class="card">
            <div class="card-header">
                <div class="card-title">Yeni Kategori Ekle</div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label  asp-for="CategoryName">Kategori Adı</label>
                    <input asp-for="CategoryName" type="text" class="form-control input-square" placeholder="Kategori Adı Giriniz...">
                </div>

                <div class="form-group">
                    <label asp-for="Description">Kategori Açıklaması</label>
                    <textarea asp-for="Description" type="text" rows="3" class="form-control input-square" placeholder="Kategori Açıklaması Giriniz..."></textarea>
                </div>
            </div>
            <div class="card-action">
                <button type="submit" class="btn btn-success">Kategori Ekle</button>

            </div>
        </div>
    </form>

</div>
