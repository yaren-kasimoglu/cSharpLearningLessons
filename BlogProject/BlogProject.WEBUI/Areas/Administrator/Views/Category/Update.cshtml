@model Category
@{
    ViewData["Title"] = "Güncelle";
}

<div class="offset-3 col-md-6">
    @if (TempData["MessageError"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["MessageError"]
        </div>
    }
    <form asp-action="Update" asp-controller="Category" asp-area="Administrator" method="post">
      <input type="hidden" asp-for="ID" />
        <div class="card">
            <div class="card-header">
                <div class="card-title">Kategori Güncelle</div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="CategoryName">Kategori Adı</label>
                    <input asp-for="CategoryName" type="text" class="form-control input-square" placeholder="Kategori Adı Giriniz...">
                </div>

                <div class="form-group">
                    <label asp-for="Description">Kategori Açıklaması</label>
                    <textarea asp-for="Description" type="text" rows="3" class="form-control input-square" placeholder="Kategori Açıklaması Giriniz..."></textarea>
                </div>
            </div>
            <div class="card-action">
                <button type="submit" class="btn btn-success">Kategori Güncelle</button>

            </div>
        </div>
    </form>

</div>
