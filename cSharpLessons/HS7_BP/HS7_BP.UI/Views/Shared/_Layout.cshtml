<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HSYedi_BP.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HSYedi_BP.UI.styles.css" asp-append-version="true" />

    @RenderSection("Styles",false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">HSYedi_BP.UI</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <!-- Right navbar links -->
                    <ul class="order-1 order-md-3 navbar-nav navbar-no-expand ml-auto">
                        @if (User.Identity.IsAuthenticated)
                        {

                            <li class="navbar-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="ProfileDetails" asp-route-userName="@User.Identity.Name">View Profile</a>
                            </li>
                            <li class="navbar-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Edit" asp-route-userName="@User.Identity.Name">Edit Profile</a>
                            </li>
                            <li class="navbar-item">
                                <a class="nav-link text-danger" asp-controller="Account" asp-action="LogOut">@User.Identity.Name, log out</a>
                            </li>
                        }
                        else
                        {
                            <li class="navbar-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="LogIn">Log In</a>
                            </li>
                            <li class="navbar-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
                            </li>

                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @if (TempData["error"] != null)
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="alert alert-danger">
                        <span><b>@TempData["error"].ToString()</b></span>
                    </div>
                </div>
            </div>

        }
        @RenderBody()

    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - HSYedi_BP.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
