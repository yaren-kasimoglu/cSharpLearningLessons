@model Supplier
@{
    ViewData["Title"] = "TedarikciGuncelle";
}

<div class="row">
    <div class="offset-3 col-lg-6">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Tedasikci Güncelle</strong>
            </div>
            <div class="card-body">
                <!-- Credit Card -->
                <div id="pay-invoice">
                    <div class="card-body">
                        <form asp-area="Admin" asp-controller="Supplier" asp-action="TedarikciGuncelle" method="post" novalidate="novalidate">

                            <div class="form-group">
                                <label asp-for="SupplierName" class="control-label mb-1">Tedarikci Adı</label>
                                <input asp-for="SupplierName" type="text" class="form-control">
                            </div>
                            <div class="form-group has-success">
                                <label asp-for="Address" class="control-label mb-1">Tedarikci Adres</label>
                                <input asp-for="Address" type="text" class="form-control">

                            </div>
                            <div class="form-group has-success">
                                <label asp-for="Phone" class="control-label mb-1">Tedarikci Telefon</label>
                                <input asp-for="Phone" type="text" class="form-control">

                            </div>
                            <div class="form-group has-success">
                                <label asp-for="Emain" class="control-label mb-1">Tedarikci Email</label>
                                <input asp-for="Emain" type="text" class="form-control">

                            </div>

                            <div>
                                <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                    <i class="fa fa-plus-square-o fa-lg"></i>&nbsp;
                                    <span id="payment-button-amount">Tedarikci Guncelle</span>
                                    <span id="payment-button-sending" style="display:none;">Guncelleniyor…</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>