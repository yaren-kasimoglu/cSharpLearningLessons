@{
    ViewData["Title"] = "Index";
}

@model List<Product>

<div class="row">

    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Data Table</strong>
            </div>
            <div class="card-body">
                <!-- /# column -->
                <div class="col-lg-12">
                    <div class="card">

                        <div class="card-body">
                            <div class="custom-tab">
                                <nav>
                                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                        <a class="nav-item nav-link active" id="custom-nav-active-products-tab" data-toggle="tab" href="#custom-nav-active-products" role="tab" aria-controls="custom-nav-active-products" aria-selected="true">Aktif Urunler</a>

                                        <a class="nav-item nav-link" id="custom-nav-all-products-tab" data-toggle="tab" href="#custom-nav-all-products" role="tab" aria-controls="custom-nav-all-products" aria-selected="false">Tüm Urunler</a>
                                    </div>
                                </nav>
                                <div class="tab-content pl-3 pt-2" id="nav-tabContent">
                                    <div class="tab-pane fade show active" id="custom-nav-active-products" role="tabpanel" aria-labelledby="custom-nav-active-products-tab">
                                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Urun Adı</th>
                                                    <th>Urun Fiyatı</th>
                                                    <th>Stok Durumu</th>
                                                    <th>Son Kullanma Tarihi</th>
                                                    <th>Kategori</th>
                                                    <th>Tedarikci</th>
                                                    <th>Durumu</th>
                                                    <th>İşlemler</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (Product item in Model)
                                                {
                                                    @if (item.IsActive)
                                                    {

                                                        <tr>
                                                            <td>@item.ProductName</td>
                                                            <td>@item.UnitPrice</td>
                                                            <td>@item.Stock</td>
                                                            <td>@item.ExpireDate</td>
                                                            <td>@item.Category.CategoryName</td>
                                                            <td>@item.Supplier.SupplierName</td>
                                                            <td>
                                                                @if (item.IsActive)
                                                                {
                                                                    <span>Aktif</span>
                                                                }
                                                                else
                                                                {
                                                                    <span>Pasif</span>
                                                                }
                                                            </td>
                                                            <td>
                                                                <a asp-controller="Product" asp-action="UrunSil" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>&nbsp; Sil</a>
                                                                <a asp-controller="Product" asp-action="UrunGuncelle" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fa fa-edit"></i>&nbsp; Güncelle</a>

                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="tab-pane fade" id="custom-nav-all-products" role="tabpanel" aria-labelledby="custom-nav-all-products-tab">
                                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Urun Adı</th>
                                                    <th>Urun Fiyatı</th>
                                                    <th>Stok Durumu</th>
                                                    <th>Urun</th>
                                                    <th>Tedarikci</th>
                                                    <th>Durumu</th>
                                                    <th>İşlemler</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (Product item in Model)
                                                {
                                                    <tr>
                                                        <td>@item.ProductName</td>
                                                        <td>@item.UnitPrice</td>
                                                        <td>@item.Stock</td>
                                                        <td>@item.ExpireDate</td>
                                                        <td>@item.Supplier.SupplierName</td>
                                                        <td>
                                                            @if (item.IsActive)
                                                            {
                                                                <span>Aktif</span>
                                                            }
                                                            else
                                                            {
                                                                <span>Pasif</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            @if (item.IsActive)
                                                            {
                                                                <a asp-controller="Product" asp-action="UrunSil" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>&nbsp; Sil</a>
                                                            }
                                                            else
                                                            {
                                                                <a asp-controller="Product" asp-action="UrunAktiflestir" asp-route-id="@item.Id" class="btn btn-success btn-sm"><i class="fa fa-check-square"></i>&nbsp; Aktif Et</a>
                                                            }

                                                            <a asp-controller="Product" asp-action="UrunGuncelle" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fa fa-edit"></i>&nbsp; Güncelle</a>


                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Css{
    <link rel="stylesheet" href="~/template/assets/css/lib/datatable/dataTables.bootstrap.min.css">

    }
    @section Scripts{

    <script src="~/template/assets/js/lib/data-table/datatables.min.js"></script>
    <script src="~/template/assets/js/lib/data-table/dataTables.bootstrap.min.js"></script>
    <script src="~/template/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
    <script src="~/template/assets/js/init/datatables-init.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#bootstrap-data-table-export').DataTable();
        });
    </script>


    }
