                                                                }
                                                                else if (item.Status == Status.Cancelled)
                                                                {
                                                                    <span>İptal Edildi</span>

                                                                }
                                                            </td>
                                                            <td>

                                                                <a asp-controller="Order" asp-action="SiparisDetayiGor" asp-route-id="@item.Id" asp-area="Admin" class="btn dt-button-info btn-sm"><i class="fa fa-list-square"></i> Sipariş Detayı </a>
                                                                }
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>

