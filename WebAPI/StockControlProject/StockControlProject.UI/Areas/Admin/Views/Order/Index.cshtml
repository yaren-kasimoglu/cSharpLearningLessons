@{
    ViewData["Title"] = "Index";
}

@model List<Order>

<div class="row">

    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Siparişler Listesi</strong>
            </div>
            <div class="card-body">
                <div class="col-lg-12">
                    <div class="card">

                        <div class="card-body">
                            <div class="custom-tab">
                                <nav>
                                    <div class="nav nav-tabs" id="nav-tab" role="tablist">

                                        <a class="nav-item nav-link" id="custom-nav-pending-orders-tab" data-toggle="tab" href="custom-nav-pending-orders" role="tab" aria-controls="custom-nav-pending-orders" aria-selected="false">Bekleyen Siparişler</a>

                                        <a class="nav-item nav-link confirmed" id="custom-nav-confirmed-orders-tab" data-toggle="tab" href="custom-nav-confirmed-orders" role="tab" aria-controls="custom-nav-confirmed-orders" aria-selected="true">Onaylanan Siparişler</a>

                                        <a class="nav-item nav-link" id="custom-nav-cancelled-orders-tab" data-toggle="tab" href="custom-nav-cancelled-orders" role="tab" aria-controls="custom-nav-cancelled-orders" aria-selected="false">Reddedilen Siparişler</a>

                                    </div>
                                </nav>
                                <div class="tab-content pl-3 pt-2" id="nav-tabContent">
                                    <div class="tab-pane fade show active" id="custom-nav-pending-orders" role="tabpanel" aria-labelledby="custom-nav-pending-orders-tab">
                                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Sipariş Tarihi</th>
                                                    <th>Müşteri</th>
                                                    <th>Toplam Tutar</th>
                                                    <th>Sipariş Durumu</th>
                                                    <th>İşlemler</th>
                                                    <th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (Order item in Model)
                                                {

                                                    @if (item.Status == Status.Pending)
                                                    {
                                                        <tr>
                                                            <td>@item.AddedDate.ToShortDateString()</td>
                                                            <td>@item.User.FirstName @item.User.LastName</td>
                                                            <td>
                                                                @{
                                                                    decimal total = 0;

                                                                    @foreach (OrderDetails orderDetails in item.OrderDetails)
                                                                    {
                                                                        total += (orderDetails.Quantity * orderDetails.UnitPrice);

                                                                    }
                                                                    <span>@total.ToString("C2")</span>
                                                                }
                                                            </td>
                                                            <td>
                                                                @if (item.Status == Status.Pending)
                                                                {

                                                                    <span>Bekliyor</span>

                                                                }
                                                                else if (item.Status == Status.Confirmed)
                                                                {
                                                                    <span>Onaylandı</span>
                                                                }
                                                                else if (item.Status == Status.Cancelled)
                                                                {
                                                                    <span>İptal Edildi</span>

                                                                }
                                                            </td>
                                                            <td>
                                                                @if (item.IsActive)
                                                                {
                                                                    <a asp-controller="Order" asp-action="SiparisOnayla" asp-route-id="@item.Id" asp-area="Admin" class="btn btn-success btn-sm"><i class="fa fa-check"></i> Onayla</a>
                                                                }
                                                                else
                                                                {
                                                                    <a asp-controller="Order" asp-action="SiparisReddet" asp-route-id="@item.Id" asp-area="Admin" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i> Reddet</a>

                                                                    <a asp-controller="Order" asp-action="SiparisDetayiGor" asp-route-id="@item.Id" asp-area="Admin" class="btn dt-primary-info btn-sm"><i class="fa fa-list"></i> Sipariş Detayı </a>
                                                                }
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>

                                    <div class="tab-pane fade" id="custom-nav-confirmed-orders" role="tabpanel" aria-labelledby="custom-nav-confirmed-orders-tab">
                                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
