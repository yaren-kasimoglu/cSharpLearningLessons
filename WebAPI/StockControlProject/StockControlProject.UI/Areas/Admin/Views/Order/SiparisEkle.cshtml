@model Order
@{
    ViewData["Title"] = "SiparisEkle";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="row">
    <div class="offset-3 col-lg-6">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Credit Card</strong>
            </div>
            <div class="card-body">
                <!-- Credit Card -->
                <div id="pay-invoice">
                    <div class="card-body">
                        <form asp-area="Admin" asp-controller="Order" asp-action="SiparisEkle" method="post" novalidate="novalidate">

                            <div class="form-group has-success">
                                <label asp-for="UserId" class="control-label mb-1">Müşteri Bilgisi</label>
                                <select asp-for="UserId" asp-items="@ViewBag.AktifMusteriler" class="form-control">
                                    <option>Lütfen Müşteri Bilgisi Seçiniz...</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label asp-for="Status" class="control-label mb-1">Siparis Durumu</label>
                                <input asp-for="Status" type="text" class="form-control">
                            </div>
                           
                            <div>
                                <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                    <i class="fa fa-plus-square-o fa-lg"></i>&nbsp;
                                    <span id="payment-button-amount">Siparis Ekle</span>
                                    <span id="payment-button-sending" style="display:none;">Ekleniyor…</span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

