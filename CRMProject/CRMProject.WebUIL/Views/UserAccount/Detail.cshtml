@model UserAccountDTO
<style>
    .uk-grid {
        margin-top: 10px;
    }
</style>
<div class="md-card">
    <div class="md-card-content">
        <form asp-controller="UserAccount" asp-action="Detail" asp-route-id="@Model?.UserId" method="post">
            <h3>Kullanıcı Detay</h3>
            <div>
                <button id="btnNew" name="btnNew" class="md-btn md-btn-wave waves-effect waves-button">Yeni</button>
                <button id="btnSave" name="btnSave" class="md-btn md-btn-wave waves-effect waves-button">Kaydet</button>
                <button id="btnDelete" name="btnDelete" class="md-btn md-btn-wave waves-effect waves-button">Sil</button>
                <button id="btnList" name="btnList" class="md-btn md-btn-wave waves-effect waves-button">Listele</button>
            </div>
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="RecordDate" />
            <input type="hidden" asp-for="ModifiedDate" />

            <div asp-validation-summary="ModelOnly"></div>
            <div class="uk-grid">
                <div class="uk-width-medium-1-1">
                    <div class="uk-form-row">
                        <div class="uk-grid">
                            <div class="uk-width-medium-1-3" data-uk-grid-margin">

                                <label asp-for="UserName">Kullanıcı Adı</label>
                                <input asp-for="UserName" type="text" class="md-input" />

                            </div>
                            <div class="uk-width-medium-1-3" data-uk-grid-margin">

                                <label asp-for="Password">Şifre</label>
                                <input asp-for="Password" type="text" class="md-input" />

                            </div>
                            <div class="uk-width-medium-1-3" data-uk-grid-margin">

                                <label asp-for="FullName">Tam Adı</label>
                                <input asp-for="FullName" type="text" class="md-input" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>